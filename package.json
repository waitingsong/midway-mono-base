{
  "name": "midway-mono-base",
  "version": "3.0.0",
  "description": "monorepo",
  "private": true,
  "type": "module",
  "devDependencies": {
    "@commitlint/cli": "17",
    "@commitlint/config-conventional": "17",
    "@midwayjs/cli": "^2.1.1",
    "@midwayjs/mock": "^3.11.15",
    "@midwayjs/swagger": "^3.11.16",
    "@midwayjs/web": "^3.11.15",
    "@rollup/plugin-commonjs": "25",
    "@rollup/plugin-node-resolve": "15",
    "@swc/core": "^1.3.76",
    "@types/mocha": "10",
    "@types/node": "20",
    "@types/supertest": "^2.0.12",
    "@waiting/eslint-config": "^8.8.0",
    "coveralls": "3",
    "debug": "^4.3.4",
    "eslint": "8",
    "kmore-cli": "^56.0.0",
    "madge": "^6.0.0",
    "mocha": "10",
    "mocha-lcov-reporter": "1",
    "nx": "16",
    "rollup-plugin-dts": "^6.0.0",
    "supertest": "^6.3.3",
    "swagger-ui-dist": "^5.3.0",
    "ts-node": "^10.9.1",
    "tsc-alias": "^1.8.7",
    "tsconfig-paths": "4",
    "typescript": "^5.1.6",
    "zx": "7"
  },
  "engines": {
    "node": ">=18.12.0"
  },
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "add:types": "sh .scripts/add-types.sh",
    "add:svc": "sh .scripts/add-service.sh",
    "bp:add": "git remote add bp https://github.com/waitingsong/midway-mono-base",
    "bp:sync": "git fetch --all -v && git pull origin && git merge bp/main -m \"Merge remote-tracking branch 'bp/main'\" ",
    "bp:syncxo": "git fetch --all -v && git pull origin && git merge bp/main -m \"Merge remote-tracking branch 'bp/main'\" -Xours",
    "bootstrap": "npm i --loglevel info --disturl=https://npmmirror.com/dist/",
    "build": "sh .scripts/build.sh",
    "ci": "npm run cov",
    "clean": "lerna clean --loglevel error --yes & lerna run clean",
    "clean:dist": "rm -rf packages/*/dist/ & rm -rf packages/*/.vscode/",
    "cov": "sh .scripts/cov.sh",
    "doc": "node .githooks/doc.js",
    "lint": "sh .scripts/lint.sh",
    "lint:cycle": "lerna exec -- madge --circular --extensions ts src",
    "lint:nofix": "sh .scripts/lint-no-fix.sh",
    "lint:s": "sh .scripts/lint-no-fix-s.sh",
    "postbuild": "rm -rf packages/*/dist/.mwcc-cache",
    "postinstall": "npm run repo:init && zx .scripts/clean_pkgs.mjs",
    "postpublish": "rm -rf packages/*/npm-shrinkwrap.json",
    "pub": "sh .scripts/publish.sh --no-private --conventional-commits --create-release gitlab",
    "pub:canary": "sh .scripts/publish.sh --no-private --canary",
    "pub:beta": "sh .scripts/publish.sh --no-private --dist-tag beta --force-publish=* --conventional-commits --create-release gitlab",
    "pub:next": "sh .scripts/publish.sh --no-private --dist-tag next --conventional-commits --create-release gitlab",
    "preversion": "",
    "purge": "nx reset & rm package-lock.json -f && npm run clean && lerna run purge && rm node_modules -rf",
    "postpurge": "npm run refresh",
    "repo:init": "sh .githooks/init-repo.sh",
    "refresh": "npm run bootstrap && nx reset && npm run build",
    "tar": "sh .scripts/tar.sh",
    "test": "lerna run test",
    "ptest": "sh .scripts/test.sh"
  }
}
