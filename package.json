{
  "name": "midway-mono-base",
  "version": "1.0.0",
  "description": "monorepo",
  "private": true,
  "devDependencies": {
    "@commitlint/cli": "8",
    "@commitlint/config-conventional": "8",
    "@types/mocha": "7",
    "@types/node": "12",
    "@types/power-assert": "1",
    "@types/rewire": "2",
    "@types/rimraf": "2",
    "@types/yargs": "15",
    "@waiting/eslint-config": "3",
    "coveralls": "3",
    "debug": "^4.1.0",
    "eslint": "6",
    "lerna": "3",
    "midway-mock": "1",
    "mocha": "7",
    "mocha-lcov-reporter": "1",
    "nyc": "15",
    "power-assert": "1",
    "rewire": "4",
    "rimraf": "3",
    "rxrunscript": "5",
    "ts-node": "8",
    "typescript": "3",
    "yargs": "15"
  },
  "scripts": {
    "bp:add": "git remote add bp https://github.com/waitingsong/midway-mono-base",
    "bp:sync": "git fetch --all -v && git merge bp/master -m \"Merge remote-tracking branch 'bp/master'\"",
    "bootstrap": "lerna bootstrap --loglevel notice",
    "build": "sh .scripts/build.sh",
    "ci": "npm run build && npm run cov",
    "clean": "lerna clean --loglevel error --yes && lerna run clean && npm run clean:lock",
    "clean:lock": "rm packages/*/package-lock.json -f",
    "cov": "lerna run cov --concurrency=1",
    "doc": "node .githooks/doc.js",
    "lint": "lerna run lint --parallel",
    "lint:nofix": "lerna run lint:nofix --parallel",
    "pub": "sh .scripts/publish.sh --conventional-commits --create-release gitlab",
    "pub:canary": "sh .scripts/publish.sh --canary",
    "pub:beta": "sh .scripts/publish.sh --dist-tag beta --force-publish=* --conventional-commits --create-release gitlab",
    "pub:next": "sh .scripts/publish.sh --dist-tag next --conventional-commits --create-release gitlab",
    "prepack": "sh .scripts/ci/ci-prepack.sh",
    "preversion": "npm run clean:lock",
    "purge": "npm run clean && rm node_modules -rf",
    "repo:init": "sh .githooks/init-repo.sh",
    "reset": "npm run purge && npm i && npm run ci",
    "tar": "sh .scripts/tar.sh",
    "test": "lerna run test"
  },
  "nyc": {
    "include": [
      "packages/*/src/*.ts",
      "packages/*/src/**/*.ts"
    ],
    "exclude": [
      ".githooks",
      "node_modules*",
      "**/src/bin",
      "**/src/domain.ts",
      "**/src/interface.ts",
      "**/dist",
      "**/node_modules*",
      "**/test",
      "**/test*",
      "**/*.d.ts",
      "**/*.js"
    ],
    "extension": [
      ".ts"
    ],
    "reporter": [
      "json",
      "html"
    ],
    "all": true
  }
}
