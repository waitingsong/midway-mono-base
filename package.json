{
  "name": "midway-mono-base",
  "version": "3.0.0",
  "description": "monorepo",
  "private": true,
  "devDependencies": {
    "@commitlint/cli": "17",
    "@commitlint/config-conventional": "17",
    "@midwayjs/cli": "^1.3.12",
    "@midwayjs/cli-plugin-build": "1.3.10",
    "@midwayjs/cli-plugin-swc": "^1.3.5",
    "@midwayjs/mock": "^3.5.0",
    "@midwayjs/swagger": "^3.5.0",
    "@midwayjs/web": "^3.5.0",
    "@rollup/plugin-commonjs": "22",
    "@rollup/plugin-node-resolve": "13",
    "@swc/core": "^1.2.222",
    "@types/mocha": "9",
    "@types/node": "18",
    "@types/rimraf": "3",
    "@types/supertest": "^2.0.12",
    "@waiting/eslint-config": "^8.6.0",
    "coveralls": "3",
    "debug": "^4.3.4",
    "eslint": "8",
    "kmore-cli": "^37.0.0",
    "lerna-relinker": "^1.5.0",
    "madge": "^5.0.1",
    "mocha": "10",
    "mocha-lcov-reporter": "1",
    "rimraf": "3",
    "rollup-plugin-terser": "7",
    "rxjs": "^7.5.0",
    "rxrunscript": "^11.0.1",
    "supertest": "^6.2.0",
    "swagger-ui-dist": "^4.13.0",
    "ts-node": "^10.9.1",
    "tsc-alias": "^1.7.0",
    "tsconfig-paths": "4",
    "typescript": "^4.8.2",
    "zx": "7"
  },
  "engines": {
    "node": ">=16.13.0"
  },
  "scripts": {
    "add:types": "sh .scripts/add-types.sh",
    "add:svc": "sh .scripts/add-service.sh",
    "bp:add": "git remote add bp https://github.com/waitingsong/midway-mono-base",
    "bp:sync": "git fetch --all -v && git pull origin && git merge bp/main -m \"Merge remote-tracking branch 'bp/main'\" ",
    "bp:syncxo": "git fetch --all -v && git pull origin && git merge bp/main -m \"Merge remote-tracking branch 'bp/main'\" -Xours",
    "bootstrap": "lerna bootstrap --loglevel notice",
    "postbootstrap": "npm run repo:init && zx .scripts/clean_pkgs.mjs",
    "build": "sh .scripts/build.sh",
    "ci": "npm run cov",
    "clean": "lerna clean --loglevel error --yes & lerna run clean",
    "clean:dist": "rm -rf packages/*/dist/ & rm -rf packages/*/.vscode/",
    "cov": "sh .scripts/cov.sh",
    "doc": "node .githooks/doc.js",
    "lint": "sh .scripts/lint.sh",
    "lint:cycle": "lerna exec -- madge --circular --extensions ts src",
    "lint:nofix": "sh .scripts/lint-no-fix.sh",
    "lint:s": "sh .scripts/lint-no-fix-s.sh",
    "postbuild": "rm -rf packages/*/dist/.mwcc-cache",
    "postinstall": "npm run repo:init",
    "pub": "sh .scripts/publish.sh --conventional-commits --create-release gitlab",
    "pub:canary": "sh .scripts/publish.sh --canary",
    "pub:beta": "sh .scripts/publish.sh --dist-tag beta --force-publish=* --conventional-commits --create-release gitlab",
    "pub:next": "sh .scripts/publish.sh --dist-tag next --conventional-commits --create-release gitlab",
    "preversion": "",
    "purge": "npm run clean & lerna run purge & rm node_modules -rf & rm package-lock.json -f",
    "postpurge": "npm run refresh",
    "repo:init": "sh .githooks/init-repo.sh",
    "refresh": "npm run bootstrap && npm run build",
    "tar": "sh .scripts/tar.sh",
    "test": "lerna run test",
    "ptest": "sh .scripts/test.sh"
  }
}
